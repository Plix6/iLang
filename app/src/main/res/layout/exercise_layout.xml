<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:text=""
        android:drawableTop="@drawable/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/userData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="20dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        android:gravity="start"
        android:background="@drawable/round_corner_secondary"
        android:padding="10dp"
        android:text="@string/placeholder_text"
        android:textSize="@dimen/exercise_user_data_font_size"/>

    <TextView
        android:id="@+id/questionPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/userData"
        android:textSize="@dimen/exercise_question_prompt_font_size"
        android:text="@string/question_prompt"
        android:gravity="center"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:id="@+id/questionWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="@dimen/exercise_question_prompt_font_size"
        app:layout_constraintTop_toBottomOf="@id/questionPrompt"
        android:text="test"/>

    <Button
        android:id="@+id/answerOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:maxHeight="80dp"
        android:minHeight="50dp"
        android:padding="15dp"
        android:textSize="@dimen/answer_font_size"
        android:text="qsdqsdqs"
        app:layout_constraintTop_toBottomOf="@id/questionWord">

    </Button>

    <Button
        android:id="@+id/answerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:maxHeight="80dp"
        android:minHeight="50dp"
        android:padding="15dp"
        android:textSize="@dimen/answer_font_size"
        android:text="qsdqsdqs"
        app:layout_constraintTop_toBottomOf="@id/answerOne" />

    <Button
        android:id="@+id/answerThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:maxHeight="80dp"
        android:minHeight="50dp"
        android:padding="15dp"
        android:textSize="@dimen/answer_font_size"
        android:text="qsdqsdqs"
        app:layout_constraintTop_toBottomOf="@id/answerTwo" />

    <Button
        android:id="@+id/answerFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:maxHeight="80dp"
        android:minHeight="50dp"
        android:padding="15dp"
        android:textSize="@dimen/answer_font_size"
        android:text="qsdqsdqs"
        app:layout_constraintTop_toBottomOf="@id/answerThree" />

</androidx.constraintlayout.widget.ConstraintLayout>